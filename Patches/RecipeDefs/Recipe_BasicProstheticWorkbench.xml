<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<!-- ========== Steel Arm ========== -->
	<Operation Class="PatchOperationReplace">
		<xpath>*/RecipeDef[defName="CreateSteelArm"]/ingredients/li/count</xpath>
		<value>
			<count>40</count>
		</value>
	</Operation>

	<!-- ========== Peg Leg ========== -->
	<Operation Class="PatchOperationReplace">
		<xpath>*/RecipeDef[defName="CreatePegLeg"]/ingredients/li/count</xpath>
		<value>
			<count>30</count>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>*/RecipeDef[defName="CreatePegLeg"]/description</xpath>
		<value>
			<description>Crafts a peg leg from wood.</description>
		</value>
	</Operation>

	<!-- ========== Hook Hand ========== -->
	<Operation Class="PatchOperationReplace">
		<xpath>*/RecipeDef[defName="CreateHookHand"]/ingredients/li[1]/count</xpath>
		<value>
			<count>20</count>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>*/RecipeDef[defName="CreateHookHand"]/description</xpath>
		<value>
			<description>Crafts a hook hand from steel.</description>
		</value>
	</Operation>
	<Operation Class="PatchOperationRemove">
		<xpath>*/RecipeDef[defName="CreateHookHand"]/ingredients/li[2]</xpath>
	</Operation>
	<Operation Class="PatchOperationRemove">
		<xpath>*/RecipeDef[defName="CreateHookHand"]/fixedIngredientFilter/categories</xpath>
	</Operation>

	<!-- ========== Denture ========== -->
	<Operation Class="PatchOperationReplace">
		<xpath>*/RecipeDef[defName="CreateDenture"]/ingredients/li/count</xpath>
		<value>
			<count>25</count>
		</value>
	</Operation>
	<Operation Class="PatchOperationRemove">
		<xpath>*/RecipeDef[defName="CreateDenture"]/skillRequirements</xpath>
	</Operation>

	<!-- ========== Wooden Foot ========== -->
	<Operation Class="PatchOperationReplace">
		<xpath>*/RecipeDef[defName="CreateWoodenFoot"]/ingredients/li/count</xpath>
		<value>
			<count>20</count>
		</value>
	</Operation>
	<Operation Class="PatchOperationRemove">
		<xpath>*/RecipeDef[defName="CreateWoodenFoot"]/skillRequirements</xpath>
	</Operation>

</Patch>