<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<!-- ========== Energized Components ========== -->
	<Operation Class="PatchOperationReplace">
		<xpath>*/RecipeDef[defName="MakeEnergizedComponent"]/description</xpath>
		<value>
			<description>Upgrade a component using uranium, gold and plasteel.</description>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>*/RecipeDef[defName="MakeEnergizedComponent"]/ingredients</xpath>
		<value>
			<ingredients />
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>*/RecipeDef[defName="MakeEnergizedComponent"]/ingredients</xpath>
		<value>
			<li>
				<filter>
					<thingDefs>
						<li>Component</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Uranium</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Gold</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Plasteel</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>*/RecipeDef[defName="MakeEnergizedComponent"]/fixedIngredientFilter/thingDefs</xpath>
		<value>
			<thingDefs />
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>*/RecipeDef[defName="MakeEnergizedComponent"]/fixedIngredientFilter/thingDefs</xpath>
		<value>
			<li>Component</li>
			<li>Uranium</li>
			<li>Gold</li>
			<li>Plasteel</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>*/RecipeDef[defName="MakeEnergizedComponent"]/skillRequirements/li/minLevel</xpath>
		<value>
			<minLevel>13</minLevel>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>*/RecipeDef[defName="MakeEnergizedComponent"]/skillRequirements</xpath>
		<value>
			<li>
				<skill>Intellectual</skill>
				<minLevel>7</minLevel>
			</li>
		</value>
	</Operation>

</Patch>