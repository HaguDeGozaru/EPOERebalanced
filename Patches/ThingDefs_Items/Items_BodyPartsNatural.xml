<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<!-- ========== Base ========== -->
	<Operation Class="PatchOperationAdd">
		<xpath>/ThingDefs/ThingDef[@Name="BodyPartNaturalBase"]/statBases</xpath> <!-- Patches the vanilla base -->
		<value>
			<SellPriceFactor>0.4</SellPriceFactor> <!-- Make prisoner harvesting less OP -->
		</value>
	</Operation>

