<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<!-- ========== Energized Components ========== -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="EnergizedComponents"]/statBases/MarketValue</xpath>
		<value>
			<MarketValue>360</MarketValue>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="EnergizedComponents"]/label</xpath>
		<value>
			<label>energized component</label> <!-- consistency with 'component' from vanilla -->
		</value>
	</Operation>

</Patch>